        "Transaction": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "example": "8616aa28-2177-48ec-a5ef-c4c388d8543f"
                },
                "user_id": {
                    "type": "string",
                    "example": "8616aa28-2177-48ec-a5ef-c4c388d8543f"
                },
                "name": {
                    "type": "string",
                    "example": "Salary"
                },
                "type": {
